   "source": [
    "import os\n",
    "\n",
    "# Configuration\n",
    "n_jobs = 5\n",
    "chunk_size = 57\n", "#how many lightcurves should run in each job"
"#if i have a total of 50 lightcurves, and i give 5 n_jobs, "
"#and i run all 5 run_tls_part{i} jobs, then each job will run 10 lightcurves. "

    "output_dir = \"3_import_to_geryon\"\n",
    "\n",
    "os.makedirs(output_dir, exist_ok=True)\n",
    "\n",
    "for i in range(1, n_jobs + 1):\n",
    "    start = (i - 1) * chunk_size\n",
    "    end = i * chunk_size\n",
    "    job_name = f\"run_tls_part{i}\"\n",
    "    filename = os.path.join(output_dir, f\"{job_name}.pbs\")\n",
    "\n",
    "    script = f\"\"\"#PBS -S /bin/bash\n",
    "#PBS -V\n",
    "#PBS -M dyaptangco@gmail.com\n",
    "#PBS -N {job_name}\n",
    "#PBS -j eo\n",
    "#PBS -o logs/\n",
    "#PBS -l select=1:ppn=20\n",
    "#PBS -l walltime=168:00:00\n",
    "##################################\n",
    "\n",
    "export PYTHONPATH=$HOME/.local/lib/python3.6/site-packages:$PYTHONPATH\n",
    "\n",
    "cd \"$PBS_O_WORKDIR\"\n",
    "\n",
    "python3 in_geryon_run_tls.py '[{start}:{end}]'\n",
    "\"\"\"\n",
    "\n",
    "    with open(filename, \"w\") as f:\n",
    "        f.write(script)\n",
    "\n",
    "print(f\"✅ Created {n_jobs} PBS job scripts in '{output_dir}/'\")"
   ]
  }
 ],
